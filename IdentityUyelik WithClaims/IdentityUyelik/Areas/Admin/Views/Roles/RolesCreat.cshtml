@model AdminModel.RolesCreatViewModel
@{
    ViewData["Title"] = "RolesCreat";
}



<div class="row">

    <div class="col-md-6 offset-md-3 text-center">
        <h4>Role Oluşturma</h4>

        <hr />

        <form asp-action="RolesCreat">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>


        <div class="mt-3">
            <a asp-action="Index">Role Listesine Geri Dön</a>
        </div>

    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
