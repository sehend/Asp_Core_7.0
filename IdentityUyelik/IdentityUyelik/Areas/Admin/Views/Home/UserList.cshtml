@{
    ViewData["Title"] = "UserList";
}

@model List<AdminModel.UserViewModel>

<h1>Üye Liste</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Kulanıcı Adı
            </th>
            <th>
                Email
            </th>
            <th>
                RolLer
            </th>
            <th>
                Rol İşlemleri
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id</td>

                <td>@item.Name</td>

                <td>@item.Email</td>

                <td><user-role-names user-id="@item.Id"></user-role-names></td>

                <td><a class="btn btn-dark" asp-area="Admin" asp-controller="Roles" asp-action="AssignRolesToUser" asp-route-id="@item.Id">Role Ata</a></td>

            </tr>
        }

    </tbody>


</table>